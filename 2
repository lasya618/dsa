#include <stdio.h>

int stack[100], choice, n, top, x, i;

void push(void);
void pop(void);
void display(void);

int main() {
    top = -1;
    printf("\nEnter the size of the stack [max:100]: ");
    scanf("%d", &n);
    printf("\n\tSTACK OPERATIONS USING ARRAYS");
    printf("\n\t1.PUSH\n\t2.POP\n\t3.DISPLAY\n\t4.EXIT\n");
    do {
        printf("Enter the choice: ");
        scanf("%d", &choice);
        switch (choice) {
            case 1: push(); break;
            case 2: pop(); break;
            case 3: display(); break;
            case 4: printf("\nEXIT POINT"); break;
            default: printf("\nPLEASE ENTER A VALID OPTION");
        }
    } while (choice != 4);
    return 0;
}

void push() {
    if (top >= n - 1) {
        printf("\n\tSTACK OVERFLOW\n");
    } else {
        printf("\nEnter a value to be pushed: ");
        scanf("%d", &x);
        stack[++top] = x;
    }
}

void pop() {
    if (top <= -1) {
        printf("\n\nSTACK IS UNDERFLOW\n");
    } else {
        printf("\n\tThe popped value is %d\n", stack[top--]);
    }
}

void display() {
    if (top >= 0) {
        printf("\nThe elements in the stack are: \n");
        for (i = 0; i <= top; i++) {
            printf("%d ", stack[i]);
        }
        printf("\nPress next choice\n");
    } else {
        printf("\nThe stack is empty!!\n");
    }
}
